{
  "name": "backend",
  "version": "1.0.50",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "bun run --preload dotenv/config --watch src/index.ts",
    "auth:generate": "bunx @better-auth/cli@latest generate --output src/db/auth-schema.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "bun src/scripts/push-schema.ts",
    "db:studio": "drizzle-kit studio",
    "db:push": "bun run db:generate && bun run db:migrate"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.4.1",
    "@elysiajs/openapi": "^1.4.14",
    "@neondatabase/serverless": "^1.0.2",
    "better-auth": "^1.4.18",
    "dotenv": "^17.2.4",
    "drizzle-orm": "^0.45.1",
    "elysia": "latest"
  },
  "devDependencies": {
    "bun-types": "latest",
    "drizzle-kit": "^0.31.8",
    "tsx": "^4.21.0"
  },
  "module": "src/index.js"
}
